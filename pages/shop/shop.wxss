/* pages/shop/shop.wxss */

checkbox .wx-checkbox-input {
  border: 1rpx solid #ddd;
  border-radius: 50%; /* 圆角 */
  width: 46rpx; /* 背景的宽 */
  height: 46rpx; /* 背景的高 */
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: 1rpx solid #ff783b;
  background: #ff783b;
  width: 47rpx; /* 背景的宽 */
  height: 47rpx; /* 背景的高 */
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.scroll-view-item {
  height: 500rpx;
}

.list {
  height: 8rem;
  border-bottom: #ddd solid 1px;
  padding: 0 0.7rem;
  display: flex;
  align-items: center;
}

.item {
  height: 6.5rem;
  border: #ddd solid 1px;
  width: 85%;
  margin-left: 1rem;
  display: flex;
}

.item image {
  height: 5.5rem;
  width: 6rem;
  margin: 0.5rem;
}

.item .title {
  margin: 0.5rem 0;
  display: flex;
  flex-direction: column;
}

.item .title .count {
  display: flex;
  margin-top: 1rem;
}

.item .title .count .cou {
  border: 1px #ddd solid;
  height: 45rpx;
  width: 45rpx;
  text-align: center;
  line-height: 45rpx;
  font-size: 0.8rem;
}

.item .title .count .bordleft {
  border: 1px #ddd solid;
  height: 45rpx;
  width: 45rpx;
  text-align: center;
  line-height: 45rpx;
  border-radius: 20rpx 0 0 20rpx;
  border-right-width: 0rpx; 
}

.item .title .count .bordright {
  border: 1px #ddd solid;
  height: 45rpx;
  width: 45rpx;
  text-align: center;
  line-height: 45rpx;
  border-radius: 0 20rpx 20rpx 0;
  border-left-width: 0rpx;
}

.bot {
  position: absolute;
  bottom: 0;
  height: 96rpx;
  display: flex;
  align-items: center;
  border-top: 1px solid #ddd;
  /* padding: 0 1rem; */
  justify-content: space-between;
  width: 100%;
}

.del {
  color: red;
  font-size: 0.9rem;
  margin-left: 1rem;
}

.pay {
  background: #ff783b;
  border-radius: 5px;
  padding: 0.4rem 0.4rem;
  font-size: 0.9rem;
  margin-right: 6%;
}
